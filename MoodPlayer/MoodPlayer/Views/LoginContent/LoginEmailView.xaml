                </StackLayout>
                <Entry x:Name="entryCaptcha" Placeholder="Enter Captcha Word" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            -->

                    <Button x:Name="buttonLogin" Text="ورود" Clicked="buttonLogin_Clicked"/>
